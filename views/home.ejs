<h1>Codial/<%=title%>
</h1>

<section id="feed-post">
        <h4>Post</h4>
        <%if(locals.user){%>
        <form action="/posts/addPost" id="new-post-form" method="POST">
                <textarea name="content" cols="30" rows="4" placeholder="Type here...."></textarea>
                <input type="submit" value="post">
        </form>
        <%}%>
        <div id="post-list-contianer">
                <ul>
                <%for(post of posts){%>
                        <li>
                                <p>
                                        <%=post.content%>
                                        <br>
                                        <small>
                                                <%=post.user.name%>
                                        </small>
                                </p>
                                
                        </li>
                        <%}%>
                </ul>
        </div>
</section>